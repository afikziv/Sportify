<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addGameActivity">


    <TextView
        android:id="@+id/hourView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="62dp"
        android:layout_toEndOf="@+id/hourInput"
        android:text="שעה"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="59dp"
        android:layout_toEndOf="@+id/dateInput"
        android:text="תאריך"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_marginStart="347dp"
        android:layout_marginBottom="72dp"
        android:text="מגרש"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="274dp"
        android:text="מס משתתפים מקסימלי"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:ignore="UnknownId" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hourInput"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="86dp"
        android:layout_weight="1"
        android:hint="HH:MM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dateInput"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="494dp"
        android:layout_weight="1"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/groundInput"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_above="@+id/maxPart"
        android:layout_marginBottom="71dp"
        android:layout_weight="1"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/maxPart"
        android:layout_width="96dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="277dp"
        android:layout_toStartOf="@+id/textView6"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="84dp"
        android:text="יצירת משחק" />

</RelativeLayout>