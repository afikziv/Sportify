<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersInGame">

    <ListView
        android:id="@+id/userListView"
        android:layout_width="410dp"
        android:layout_height="487dp"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="648dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="-108dp"
        android:text="הצטרף"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="583dp" />

    <ImageView
        android:id="@+id/tennis"
        android:layout_width="61dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="659dp"
        android:src="@drawable/tennis"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/soccer"
        android:layout_width="65dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="293dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="661dp"
        android:src="@drawable/soccer"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/basketball"
        android:layout_width="63dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="661dp"
        android:src="@drawable/basketball"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/basketball"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="180dp"
        android:text="משתתפים" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="114dp"
        android:text="כמות משתתפים:" />

    <TextView
        android:id="@+id/numOfUs"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="619dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="93dp" />

    <TextView
        android:id="@+id/inviteText"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inviteButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="38dp"
        android:text="הזמן חברים" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/inviteButton"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="623dp"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="65dp"
        android:clickable="true"
        android:foreground="@android:drawable/ic_input_add"
        app:backgroundTint="#FFFFFF" />

    <View
        android:id="@+id/view2"
        android:layout_width="401dp"
        android:layout_height="317dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="154dp" />
</RelativeLayout>