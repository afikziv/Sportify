<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamesActivity">

    <ListView
        android:id="@+id/groundDefect"
        android:layout_width="260dp"
        android:layout_height="207dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="52dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/rateButton"
        app:layout_constraintTop_toBottomOf="@+id/cGames"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <CalendarView
        android:id="@+id/cGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <ImageButton
        android:id="@+id/rateButton"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/defectsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="72dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/rateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fui_ic_mail_white_24dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="31dp"
        android:text="ליקויי המגרש"
        android:textColor="@drawable/common_google_signin_btn_icon_dark"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/groundDefect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cGames"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="56dp"
        android:layout_height="92dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:text="שלח ליקוי חדש"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/defectsButton"
        app:layout_constraintEnd_toStartOf="@+id/groundDefect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cGames"
        app:layout_constraintVertical_bias="0.977" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="66dp"
        android:layout_height="43dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="28dp"
        android:text="דרג את המגרש"
        android:textColor="@color/fui_bgGitHub"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rateButton"
        app:layout_constraintEnd_toStartOf="@+id/groundDefect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defectsButton"
        app:layout_constraintVertical_bias="0.756" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="373dp"
        android:layout_height="24dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="27dp"
        android:text="בחר יום מלוח השנה על מנת להמשיך"

        android:textColor="@color/design_default_color_primary_dark"

        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

